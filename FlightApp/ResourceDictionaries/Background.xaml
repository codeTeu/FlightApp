<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:FlightApp.ResourceDictionaries">

    <Style TargetType="StackPanel" x:Key="stackPanelMainStyle">
        <Setter  Property="Margin" Value="20" />
        <Setter  Property="Background" Value="WhiteSmoke" />
    </Style>

    <Style TargetType="Window" x:Key="windowSize">
        <Setter  Property="MinWidth" Value="800" />
        <Setter  Property="MinHeight" Value="450" />
        <Setter  Property="MaxWidth" Value="800" />
        <Setter  Property="MaxHeight" Value="450" />
    </Style>


    <Style TargetType="Menu" x:Key="menubg">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="Background" Value="LightGray" />
    </Style>

    <Style TargetType="Grid" x:Key="gridStyle">
        <Setter  Property="Margin" Value="20" />
        <Setter  Property="Background" Value="WhiteSmoke" />
    </Style>
</ResourceDictionary>